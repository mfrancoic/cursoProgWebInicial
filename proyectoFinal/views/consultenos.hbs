<div class="container mt-5">
    <h3>{{title}}</h3>
    <div class="row justify-content-center mt-3">
        <div class="col-md-7">
            <form action="/consultenos/new" method="POST" >
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre" required="required">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" required="required">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="consulta" placeholder="Consulta" required="required"></textarea>
                </div>
                <button type="submit" class="btn btn-success btn-block">Enviar Consulta</button>
            </form>
            
            <label>{{mensaje}}</label>
            
            {{#if insertId}}
                <label>Para eliminar su consulta haga click : </label>
                <a href="#" onclick="javascript:deleteConsulta({{insertId}})">Aqu√≠</a>
            {{/if}}
        </div>
    </div>
</div>

