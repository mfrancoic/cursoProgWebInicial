<div class="container mt-5">
    <h3>{{title}}</h3>    
    <div class="row">
        <div class="col-md-5 col-sm-12">
            <div class="form-group">
                <label>Seleccione el Rubro</label>
                <select class="form-control" id="rubro">                    
                    {{#each rubros}}                        
                        <option value="{{id_rubro}}">{{rubro}}
                    {{/each}}
                </select>                
                <button class="btn btn-primary" onclick="buscarArticulos()">Buscar</button>
                <label id="lblRubro" style="visibility: hidden;">{{param}}</label>
            </div>
        </div>
        <div class="col-md-7 col-sm-12">            
            <table class="table" style="color: white;">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Articulo</th>
                        <th scope="col">Precio</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each articulos}}
                    <tr>
                        <th scope="row">{{Id}}</th>
                        <td>{{Descr}}</td>
                        <td style="text-align: right;">{{Precio}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>        
    </div>            
</div>
    